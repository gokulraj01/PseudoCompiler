%{
#include "gram.tab.h"  // Include the header file generated by Bison
%}

%option noyywrap

%%

"if"        { return IF; }
":"         { return ':'; }
"fi"        { return FI; }
"else"      { return ELSE; }
[0-9]+      {return NUM;}
[\t\n]      ;  // Ignore whitespace and newline characters
.           ;  // Ignore any other characters

%%